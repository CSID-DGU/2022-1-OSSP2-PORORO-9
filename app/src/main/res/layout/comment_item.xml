<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_ccomment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_csub"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_baseline_subdirectory_arrow_right_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:tint="@color/gray_w"
        android:visibility="gone"
        tools:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_cname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TEXT_UI"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            tools:text="닉네임"/>
        <TextView
            android:id="@+id/tv_ccomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TEXT_UI"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            tools:text="덧글 내용"/>

        <TextView
            android:id="@+id/tv_cdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TEXT_SMALL"
            android:textColor="@color/gray"
            tools:text="2022-10-27"/>
    </LinearLayout>

</LinearLayout>