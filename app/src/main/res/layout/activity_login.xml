<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turq_d"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:id="@+id/lay_main"
    android:gravity="center">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/img_tgtlogo"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:gravity="center"
        android:textColor="@color/white"
        />


    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/back_border1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="아이디"
                style="@style/TEXT_UI"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/edt_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/edt_back_solid"
                android:textColor="@drawable/edt_textcolor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="비밀번호"
                style="@style/TEXT_UI"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/edt_back_solid"
                android:textColor="@drawable/edt_textcolor"
                android:inputType="textPassword"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="로그인"
            style="@style/TEXT_UI"
            android:background="@drawable/btn_back_solid"
            android:textColor="@drawable/btn_solid_textcolor"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="아직 계정이 없으신가요?"
        style="@style/TEXT_UI"
        android:background="@drawable/btn_back_line_white"
        android:textColor="@drawable/btn_line_white_textcolor"
        />
</LinearLayout>